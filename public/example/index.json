{
    "nodes": [
        {
            "type": "Container",
            "props": {
                "fluid": true
            },
            "nodes": [
                {
                    "type": "Row",
                    "props": {
                        "style": {
                            "height": "100vh",
                            "backgroundColor": "#f0f0f5"
                        },
                        "noGutters": true
                    },
                    "nodes": [
                        {
                            "type": "Cell",
                            "props": {
                                "xsAuto": true,
                                "style": {
                                    "zIndex": 1
                                }
                            },
                            "nodes": [
                                {
                                    "type": "div",
                                    "props": {
                                        "style": {
                                            "height": "100%",
                                            "boxShadow": "0 0 15px #c0c0c040",
                                            "backgroundColor": "#fff"
                                        }
                                    },
                                    "nodes": [
                                        {
                                            "type": "Menu",
                                            "props": {
                                                "itemActiveStyle": {
                                                    "color": "#00b807"
                                                },
                                                "items": [
                                                    {
                                                        "path": "/",
                                                        "title": {
                                                            "type": "img",
                                                            "props": {
                                                                "src": "/images/logo.svg"
                                                            }
                                                        },
                                                        "redirectTo": "/components"
                                                    },
                                                    {
                                                        "path": "/clients",
                                                        "title": "Clients",
                                                        "redirectTo": "/clients/list"
                                                    },
                                                    {
                                                        "path": "/matters",
                                                        "title": "Matters",
                                                        "redirectTo": "/matters/list",
                                                        "items": [
                                                            {
                                                                "path": "/list",
                                                                "title": "List"
                                                            },
                                                            {
                                                                "path": "/table",
                                                                "title": "Table"
                                                            }
                                                        ]
                                                    },
                                                    {
                                                        "path": "/remote",
                                                        "title": "Remote"
                                                    },
                                                    {
                                                        "path": "/components",
                                                        "children": {
                                                            "$type": "$expression",
                                                            "expression": "data(\"$route.location.pathname\") == \"/components\" ? \"Components*\" : \"Components\""
                                                        }
                                                    }
                                                ]
                                            }
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "type": "Cell",
                            "props": {
                                "style": {
                                    "overflowX": "hidden",
                                    "overflowY": "auto",
                                    "height": "100%"
                                },
                                "id": "MAIN_SCROLL_CONTAINER"
                            },
                            "nodes": [
                                {
                                    "type": "Row",
                                    "props": {
                                        "style": {
                                            "backgroundColor": "#fff"
                                        }
                                    },
                                    "nodes": [
                                        {
                                            "type": "Cell",
                                            "props": {
                                                "xsAuto": true,
                                                "children": "back"
                                            }
                                        },
                                        {
                                            "type": "Cell",
                                            "props": {
                                                "children": "tabs"
                                            }
                                        },
                                        {
                                            "type": "Cell",
                                            "props": {
                                                "xsAuto": true,
                                                "children": "avatar"
                                            }
                                        }
                                    ]
                                },
                                {
                                    "type": "Row",
                                    "nodes": [
                                        {
                                            "type": "Cell",
                                            "nodes": [
                                                {
                                                    "type": "Switch",
                                                    "nodes": [
                                                        {
                                                            "type": "LoadingIndicator"
                                                        }
                                                    ],
                                                    "chunk": "example/pages.json"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
